<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.first.retflix">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_retflix"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_retflix_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".view.home.HomeActivity"
                android:theme="@style/MaterialNoActionBar">
        </activity>
        <activity
                android:name=".view.SplashActivity"
                android:noHistory="true"
                android:theme="@style/MaterialNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".view.setslide.SlideActivity"
                android:noHistory="true"
                android:theme="@style/MaterialNoActionBar">
        </activity>
        <activity
                android:name=".view.detailmovie.DetailMovieActivity"
                android:theme="@style/MaterialNoActionBar">
        </activity>
        <activity
                android:name=".view.watchlist.WatchlistActivity"
                android:theme="@style/MaterialNoActionBar">
        </activity>
    </application>

</manifest>