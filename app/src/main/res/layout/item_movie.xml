<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/cardMovie"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:layout_margin="5dp">

        <ImageView
                android:id="@+id/listposterMovie"
                android:src="@drawable/poster"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:padding="1dp"
                android:orientation="horizontal"
                android:background="#91000000"
                android:layout_width="wrap_content"
                android:layout_height="20dp">
            <ImageView
                    android:src="@drawable/star"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/ratingMovie"
                    android:text="9.5"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_gravity="bottom"
                android:background="#91000000"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <TextView
                    android:id="@+id/judulMovie"
                    android:text="MOONLIGHT"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@id/tahunMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tahunMovie"
                    android:text="2019"
                    android:textColor="#ffffff"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
