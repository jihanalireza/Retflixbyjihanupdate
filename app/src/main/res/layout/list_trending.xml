<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/trendingBackdrop"
            android:src="@drawable/poster"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/trendinggradient"
            android:layout_width="match_parent"
            android:layout_height="250dp">
        <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="75dp"
                android:layout_height="110dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="130dp">
            <ImageView
                    android:id="@+id/trendingPoster"
                    android:src="@drawable/poster"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>
        <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginTop="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/trendingJudul"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOONLIGHT"/>
            <TextView
                    android:id="@+id/trendingRelease"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2019)"/>
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/trendingRating"
                        android:text="9.5"
                        android:layout_marginRight="2dp"
                        android:textColor="#ececec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:src="@drawable/star"
                        android:layout_marginTop="5dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>


            </LinearLayout>
            <TextView
                    android:id="@+id/trendingVote"
                    android:text="10000 voutes"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>