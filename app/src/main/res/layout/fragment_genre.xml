<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
            android:id="@+id/tabHome"
            app:tabIndicatorColor="@color/colorPrimaryMaterialNoActionBar"
            app:tabSelectedTextColor="@color/colorPrimaryMaterialNoActionBar"
            android:layout_width="match_parent"
            app:tabTextAppearance="@style/TabLayoutStyle"
            app:tabMode="scrollable"
            android:layout_height="40dp">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewHome"
            android:layout_below="@id/tabHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center" android:text="Welcome"/>

    </android.support.v4.view.ViewPager>



</RelativeLayout>